<!-- Modal -->
<div class="modal fade" id="eventModalPraticien-<%= id%>" tabindex="-1" role="dialog" aria-labelledby="eventModalPraticienLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="eventModalPraticienLabel">Prestations du <%= calendar_day.date.strftime("%d/%m/%Y") %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="row m-2">
          <div class="col-4">
            <%= cl_image_tag calendar_day.company.logo, width: '130px', class: 'company-avatar' %>
          </div>
          <div class="col-8">
            <p class="mb-0"><%= calendar_day.company.name %></p>
            <p class="quicksandlight"><%= calendar_day.company.full_address %></p>
            <p class="quicksandlight mb-0">Contact :</p>
            <p class="quicksandlight mb-0"><%= calendar_day.company.admin.name unless calendar_day.company.admin.nil? %> <%= calendar_day.company.admin.phone unless (calendar_day.company.admin.nil? || calendar_day.company.admin.phone.nil?) %></p>
          </div>



        </div>
        <hr>
        <div class="row m-2">
          <div class="col-8 text-left">
            <p class="mb-0">Liste des prestations :</p>

              <% events.each do |event|  %>
                <p class="quicksandlight font-13px">
                  - <%= l(event.start_date, format: :hour_details) %> à <%= l(event.end_date, format: :hour_details) %>,  Salle : <%= event.room&.name || "non précisé" %>, <%= event.massage_category.name %> - <%= event.number_of_attendees %> participant(s)
                </p>
              <% end %>

          </div>
          <div class="col-4">
            <%= cl_image_tag events.first.massage_category.photo, class: 'avatar' %>
          </div>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-secondary" data-dismiss="modal">Fermer</button>
      </div>
    </div>
  </div>
</div>
