<% if list.count > 5 %>
  <div id="myCarousel<%= carousel_num %>" class="carousel slide carousel-showmanymoveone p-5" data-ride="carousel" data-interval="4000">
    <div class="carousel-inner row no-gutters w-75 mx-auto" role="listbox">
      <div class="carousel-item active col-sm-4 col-md-3">
        <div class="img-carousel <%= padding %> d-flex align-items-center">
          <%= default_photo(list.shift.photo, classes)%>
        </div>
      </div>
      <% list.each do |element| %>
        <div class="carousel-item col-sm-4 col-md-3">
          <div class="img-carousel <%= padding %> d-flex align-items-center">
            <%= default_photo element.photo, classes %>
          </div>
        </div>
      <% end %>
    </div>
    <a class="carousel-control-prev" href="#myCarousel<%= carousel_num %>" role="button" data-slide="prev">
      <i class="fas fa-caret-left fa-4x text-primary text-big-shadow"></i>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel<%= carousel_num %>" role="button" data-slide="next">
      <i class="fas fa-caret-right fa-4x text-primary text-big-shadow"></i>
      <span class="sr-only">Next</span>
    </a>
  </div>
<% end %>
