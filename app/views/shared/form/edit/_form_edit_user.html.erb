<%= form_value.fields_for :user do |u| %>
  <div class="col-12">
    <div class="row">
      <div class="col-12 col-sm-6"><%= u.input :password, label: false, placeholder: t('password') %></div>
      <div class="col-12 col-sm-6"><%= u.input :password_confirmation, label: false, placeholder: t('password_confirmation') %></div>

      <hr class='w-75 mx-auto bg-muted mb-4'>

      <div class="col-sm-6">
        <%= u.input :first_name, label: false, placeholder: t('first_name') %>
      </div>
      <div class="col-sm-6">
        <%= u.input :last_name, label: false, placeholder: t('last_name') %>
      </div>
      <div class="col-sm-6">
        <%= u.input :birthday, label: false, as: :string, placeholder: t('birthday'), input_html: {class: "flatpickr"} %>
      </div>
      <div class="col-sm-6">
        <%= u.input :phone, label: false, placeholder: t('phone') %>
      </div>
      <div class="col-12">
        <%= u.input :address, label: false, placeholder: t('address')  %>
      </div>
      <div class="col-12">
        <%= u.input :complement, label: false, placeholder: t('complement') %>
      </div>
      <div class="col-sm-6"><%= u.input :zipcode, label: false, placeholder: t('zipcode') %></div>
      <div class="col-sm-6">
        <%= u.input :city, label: false, placeholder: t('city') %>
      </div>
      <hr class='w-75 mx-auto bg-muted mb-4'>
    </div>
  </div>
<% end %>

