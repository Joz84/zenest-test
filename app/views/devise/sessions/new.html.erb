<div class="wrapper-blue page-min-height p-2 d-flex align-items-center">
  <div class="container">
    <div class="row">
      <div class="offset-lg-2 col-lg-8 grey-card">
        <div class="m-3">
          <div class="grey-card-head m-3"><h2 class='quicksandlight'><%= t('log-in') %></h2></div>
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-inputs m-3">
              <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                      label: t('password'),
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, label: t('remember_me'), as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="form-actions">
              <%= f.submit t('log-in'), class: "blue-button mb-3 border-0 px-5 py-3" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
