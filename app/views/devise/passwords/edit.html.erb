<div class="wrapper-blue page-min-height p-2 d-flex align-items-center">
  <div class="container">
    <div class="row">
      <div class="offset-lg-2 col-lg-8 grey-card">
        <div class="m-3">
          <div class="grey-card-head m-3"><h2 class='quicksandlight'><%= t('forgot_password') %></h2></div>
            <div class="m-3">
            <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
              <%= f.error_notification %>
              <%= f.input :reset_password_token, as: :hidden %>
              <%= f.full_error :reset_password_token %>
              <div class="form-inputs mt-4 mb-5">
                <%= f.input :password,
                label: t('new_password'),
                autofocus: true,
                required: true,
                hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
                <%= f.input :password_confirmation,required: true, label: t('confirm_new_password') %>
              </div>
              <div class="mb-4">
                <%= f.submit t('confirm'), class: "blue-button border-0 py-3 px-5" %>
              </div>
            <% end %>
          </div>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
