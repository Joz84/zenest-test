<!-- Modal -->
<div class="modal fade" id="invoiceModal-<%= id %>" tabindex="-1" role="dialog" aria-labelledby="invoiceModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="invoiceModalLabel"><%= invoice.title %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <div class="modal-body height-75vh">
          <object data="<%= cl_private_download_url("#{invoice.reference}_#{invoice.invoiceable_type}_#{invoice.invoiceable_id.to_s}", :pdf) %>#view=fit&navpanes=0" type="application/pdf" width="100%" height="100%" style="border: none; background: #F6F6F9" >
            <iframe src="<%= cl_private_download_url("#{invoice.reference}_#{invoice.invoiceable_type}_#{invoice.invoiceable_id.to_s}", :pdf) %>#view=fit&navpanes=0" width="100%" height="100%" style="border: none; background: #F6F6F9" frameborder="0" border="0" scrolling="yes" allowtransparency="true" class="" allowfullscreen>




